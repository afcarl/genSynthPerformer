<h2 id="title">GenSynthPerformer</h2>


<button {{action 'visit' 'display'}} class="btn">Display View</button>
<button {{action 'visit' 'input'}} class="btn">Input View</button>

<div class="row">
    <div class="col-md-12">
        <h3>words <small><button {{action 'updateWords'}} class="btn btn-xs">Update Words</button></small></h3>
        {{#each word in model.words}}
            {{input type="text" value=word size="50" class="form-control"}}<br>
        {{/each}}
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h3>Instruments <small><button {{action 'updateInstruments'}} class="btn btn-xs">Update Instruments</button></small></h3>
        <div class="row">
            {{#each instrument in model.instruments}}
                <div class="col-md-4 col-sm-6">
                    {{textarea value=instrument cols="80" rows="6" class="form-control"}}</br>
                </div>
            {{/each}}
        </div>
    </div>
</div>
